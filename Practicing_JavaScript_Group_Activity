
<html>
<body>

<p id="test"></p>

<p id="integer_input"></p>

<p id="primeNum"></p>

<p id="enter-Float"></p>

<script>
// Print Hello World
document.getElementById("test").innerHTML = "<h2>Hello World</h2>";

// Enter an Integer
const inputInteger = prompt("Enter an integer: ")

// Output Integer Entered 
document.getElementById("integer_input").innerHTML = "You Entered: " + inputInteger;

// Input a Prime Number and declare variables
const inputPrime = parseInt(prompt("Enter a Prime Number: "))
let isPrime = true;


// Input a prime that is less than or equal to 1
if(inputPrime <= 1 ) {
document.getElementById("primeNum").innerHTML = inputPrime + " is not a Prime Number";
}

else if (inputPrime > 1) {
    for (let i = 2; i <= inputPrime/2; i++) {
        if (inputPrime % i == 0) {
            isPrime = false;
            break;
        }
    }

    if (isPrime) {
        document.getElementById("primeNum").innerHTML = inputPrime + " is a Prime Number";
    }
    else {
        document.getElementById("primeNum").innerHTML = inputPrime + " is not a Prime Number";
    }

}

const enterFloat = prompt("Enter a Float Value: ")



document.getElementById("enter-Float").innerHTML = "The Float Value: " + enterFloat;


</script>

</body>
</html>


